NODE_ENV=development
PORT=5000

# ===========================================
# CONFIGURACIÓN DEL SITIO
# ===========================================
SITE_NAME="Pedro Perez y Asociados"
SITE_EMAIL="contacto@ejemplo.com"
SITE_PHONE="+1 234 567 890"
SITE_ADDRESS="Calle Principal 123, Ciudad"

# ===========================================
# BASE DE DATOS MYSQL
# ===========================================
DB_HOST=localhost
DB_PORT=3306
